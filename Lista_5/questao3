#include <iostream>
using namespace std;

void positions(float vetor[], int quantidade)
{
    float soma = 0;
    float media;
    for (int i = 0 ; i < quantidade ; i++ ){
    soma += vetor[i];
    }

    media = soma/quantidade;
    
    for (int i = 0 ; i < quantidade ; i++){
        if (vetor[i] > media){
            cout << endl << i << " ";
        }
    }

}


int main ()
{
    int quantidade, i=0;

    cout << "Digite a quantidade de atletas: ";
    cin >> quantidade;

    float vetor[quantidade];

    cout << "Digite o peso dos atletas: ";
    for (i = 0; i < quantidade ; i++){
    cin >> vetor[i];
    }
    positions(vetor,quantidade);

    return 0;
}
