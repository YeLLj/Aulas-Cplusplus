#include <iostream>
using namespace std;

int verifica (int num1)
{
    int verifica;

    if (num1 > 0)
        verifica = 1;
        else if (num1 < 0)
            verifica = -1;
            else 
                verifica = 0;

    return verifica;

}

int main()
{
    int num1;

    cout << "Digite um nÃºmero: ";
    cin >> num1;

    cout << verifica(num1);

    return 0;
}
